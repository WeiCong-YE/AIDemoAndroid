<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 dashGap虚线间距 dashWidth虚线的长度 width转角度处连接或者空缺-->
    <item>
    <shape>
        <stroke android:dashGap="2dp"
                android:dashWidth="5dp"
                android:color="@color/colorOrange"
                android:width="2dp" />
    </shape>
</item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="1dp" android:top="1dp" android:left="1dp" android:right="1dp" >
        <shape>
            <solid android:color="@color/colorWhite" />
            <padding android:bottom="0dp"
                     android:left="0dp"
                     android:right="0dp"
                     android:top="0dp" />
        </shape>
    </item>
</layer-list>